<!DOCTYPE html>
<html lang="en">
<%- include('head') %>
<body>
 <%- include('navbar') %>

      <main>
       <%- include('index') %>
      
      </main>
      <div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4 card-container">
        <% for(const category of dataArray) { %>

        <a href="category/<%=category.name%>" class="col text-center category_link " >
          <div class="category_img shadow" >
            <img src="<%= category.imagePath %>" alt=" " style="height:150px">
          </div>
          <div>
            <%= category.name %>
          </div>

         
        </a>

        <% } %>

        <a href="/categories" class="col text-center category_link " >
          <div class="category_img shadow" >
            <img src="img/exploremore.jpg" alt=" " style="height:150px;opacity: calc(0.5);">
          </div>
          <div>
            Explore all categories 
          </div>
          </a>
      </div>
      <div style="font-family: 'Rubik', sans-serif;display: flex;justify-content: center;font-size: 20px;">Latest Blogs></div>

      <div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4 blogs-container ">
        <% for(const blogs of latestBlogs) { let desc=blogs.description.substring(0,100)+'...' %>

          <div class="card category_link" style="width: 15rem;margin:20px;">
            <img class="card-img-top" src="<%= blogs.imagePath %>" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title"><%=blogs.title %></h5>
              <p class="card-text"><%= desc %></p>
              <a href="blogs/<%= blogs._id %>" class="btn btn-dark">Read More</a>
            </div>
          </div>

        <% } %>
      </div>
      
        
        
         

      <div class="footer py-5">
        Made by Saswat
      </div>
    </div>
</body>
</html>